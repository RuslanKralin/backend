generator client {
  provider = "prisma-client"
  output   = "./generated"
  moduleFormat = "cjs" // для nodejs !!! важно это добавить для совместимости сnestjs
}

datasource db {
  provider = "postgresql"
}


model Account {
  id       String @id @default(nanoid()) 

  phone    String? @unique
  email    String? @unique

  isPhoneVerified Boolean @default(false) @map("is_phone_verified")
  isEmailVerified Boolean @default(false) @map("is_email_verified")

  role Role @default(USER)

  pendingContactChanges PendingContactChange[] // связь с таблицей pending_contact_changes

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@map("accounts") // указываем имя таблицы в бд
}

enum Role {
  USER
  ADMIN

  @@map("roles")
}

model PendingContactChange {
  id String @id @default(nanoid())

  type String  // "phone" или "email"
  value String // новый номер телефона или email
  codeHash String @map("code_hash") // хеш кода подтверждения
  expiresAt DateTime @map("expires_at") // когда код истекает

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade) // связь с таблицей accounts
  accountId String @map("account_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@unique([accountId, type]) // один pending на аккаунт, что логично ведь мы не можем менять контакт несколько раз в одно и то же время
  @@map("pending_contact_changes") // указываем имя таблицы в бд
  
}